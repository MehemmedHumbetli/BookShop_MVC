@model IEnumerable<MiniBookShop.Domain.Entities.User>

@{
    ViewData["Title"] = "User";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card {
            width: 100%;
            height: 550px;
        }

        .card-img-top {
            width: 100%;
            height: 380px;
            object-fit: cover;
        }

        .card-body {
            padding: 10px;
            overflow: hidden;
            height: 80px;
        }

        .up-btn {
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: bold;
            background-color: orange;
            color: white;
            transition: all 0.3s ease-in-out;
            margin-right: 30px;
        }

            .up-btn:hover {
                transform: scale(0.95);
                box-shadow: 0 0px 25px orange;
            }
    </style>
</head>
<body class="bg-light">

    <div class="container">
        <h2 class="text-center mb-4 text-white">User List</h2>

        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="card">
                        <img src="@item.ProfilePicturePath" class="card-img-top" alt="User Image">
                        <div class="card-body">
                            <h5 class="card-title">
                                @item.Name @item.Surname
                            </h5>
                            <p class="card-text"><strong>Age:</strong> @item.Age</p>
                            <p class="card-text"><strong>Email:</strong> @item.Gmail</p>
                            <a asp-action="Update" asp-route-id="@item.Id" asp-controller="User" class="btn up-btn">Update</a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
