@model CourseViewModel

<div class="container mt-5 d-flex justify-content-center">
    <div class="card book-card p-4">
        <h2 class="text-center mb-4">📚 Add New Course</h2>
        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Course Name</label>
                <input asp-for="Course.Name" class="form-control" placeholder="Enter course name">
            </div>

            <div class="form-group">
                <label>Course Duration</label>
                <input asp-for="Course.Duration" class="form-control" placeholder="Enter duration">
            </div>

            <div class="form-group">
                <label>Required Skills</label>
                <textarea asp-for="Course.Required_Skills" class="form-control" rows="3" placeholder="Enter skills"></textarea>
            </div>

            <div class="form-group">
                <label>Image Path</label>
                <input asp-for="Course.ImagePath" type="text" class="form-control" placeholder="Enter image path">
            </div>

            <div class="form-group">
                <label>Price ($)</label>
                <input asp-for="Course.Price" type="number" class="form-control" placeholder="Enter price">
            </div>


            <button type="submit" class="btn btn-primary btn-block add-btn">Add Course</button>
        </form>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #1c1c1c, #3a3a3a, #5a5a5a);
        font-family: 'Poppins', sans-serif;
    }

    .book-card {
        color: whitesmoke;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        width: 500px;
        box-shadow: 0px 8px 30px rgba(255, 255, 255, 0.2);
    }

        .book-card h2 {
            font-weight: 700;
        }

    .form-control {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        border-radius: 8px;
        padding: 12px;
        color: white;
    }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.3);
            color: white;
            outline: none;
            box-shadow: 0px 0px 10px rgba(255, 204, 102, 0.8);
        }

    .add-btn {
        background: linear-gradient(135deg, #ffcc66, #ffb347);
        color: white;
        font-size: 18px;
        font-weight: bold;
        padding: 12px;
        border-radius: 10px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0px 5px 15px rgba(255, 204, 102, 0.5);
        margin-top: 10px;
    }

        .add-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0px 8px 20px rgba(255, 204, 102, 0.8);
        }
</style>
