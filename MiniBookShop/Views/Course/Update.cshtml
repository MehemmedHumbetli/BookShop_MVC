@model CourseViewModel

@{
    ViewData["Title"] = "Course Update";
}

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 30px;
        backdrop-filter: blur(15px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        color: white;
        border-radius: 12px;
        padding: 12px;
    }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.3);
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
            border: none;
        }

    .form-label {
        font-weight: 600;
        color: #f0f0f0;
    }

    .btn-premium {
        background: linear-gradient(135deg, #ff9d00, #ff3c00);
        color: white;
        border-radius: 12px;
        padding: 12px 20px;
        font-weight: bold;
        transition: 0.3s;
        border: none;
    }

        .btn-premium:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(255, 61, 0, 0.5);
        }

    .image-box {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 15px;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

        .image-box img {
            border-radius: 12px;
            max-width: 150px;
            height: auto;
        }

    ::placeholder {
        color: rgba(255, 255, 255, 0.7);
    }
</style>

<div class=" d-flex justify-content-center align-items-center">
    <div class="glass-card col-md-6">
        <h2 class="text-center mb-4 text-uppercase fw-bold">Update Book</h2>

        <form asp-controller="Course" asp-action="Update" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            <input type="hidden" asp-for="Course.Id" />
            <div class="mb-3">
                <label class="form-label">Course Name</label>
                <input asp-for="Course.Name" class="form-control" required placeholder="Enter course name" />
            </div>

            <div class="mb-3">
                <label class="form-label">Author</label>
                <input asp-for="Course.Duration" class="form-control" required placeholder="Enter course duration" />
            </div>

            <div class="mb-3">
                <label asp-for="Course.Required_Skills" class="form-label">Required Skills</label>
                <textarea asp-for="Course.Required_Skills" class="form-control" rows="3" placeholder="Short Required skills for the course"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="Course.ImagePath" class="form-label">Upload New Image</label>
                <input asp-for="Course.ImagePath" class="form-control" />
            </div>

            <div class="mb-4">
                <label asp-for="Course.Price" class="form-label">Price</label>
                <input asp-for="Course.Price" type="number" class="form-control" required placeholder="$100" />
            </div>

            <button type="submit" class="btn btn-premium w-100">
                <i class="fas fa-save"></i> Update
            </button>
        </form>
    </div>
</div>
