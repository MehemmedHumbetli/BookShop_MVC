@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-container {
            display: flex;
            justify-content: center;
            gap: 40px;
            flex-wrap: wrap;
        }

        .card {
            width: 280px;
            height: 400px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.3);
            overflow: hidden;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-around;
            position: relative;
            text-decoration: none;
            transition: all 0.4s ease-in-out;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

            .card:hover {
                transform: scale(1.08);
                box-shadow: 0px 15px 40px rgba(255, 255, 255, 0.2);
                border: 1px solid rgba(255, 255, 255, 0.4);
            }

            .card h3 {
                font-size: 22px;
                font-weight: bold;
                color: #ffcc66;
                margin-top: 10px;
            }

            .card span {
                width: 60px;
                height: 4px;
                background-color: #ffcc66;
                border-radius: 2px;
                margin: 10px 0;
            }

            .card img {
                width: 220px;
                filter: drop-shadow(0px 5px 10px rgba(0, 0, 0, 0.2));
                transition: transform 0.3s ease-in-out;
            }

            .card:hover img {
                transform: scale(1.1);
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="card-container">
            <a asp-action="Index" asp-controller="User" class="card">
                <h3>Users</h3>
                <span></span>
                <img src="images/users.png" alt="Users">
            </a>

            <a asp-action="Index" asp-controller="Book" class="card">
                <h3>Books</h3>
                <span></span>
                <img src="images/books.png" alt="Books">
            </a>

            <a asp-action="Index" asp-controller="Course" class="card">
                <h3>Courses</h3>
                <span></span>
                <img src="images/courses.png" alt="Courses">
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>