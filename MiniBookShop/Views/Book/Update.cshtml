@model BookViewModel

@{
    ViewData["Title"] = "Book Update";
}

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 30px;
        backdrop-filter: blur(15px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        color: white;
        border-radius: 12px;
        padding: 12px;
    }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.3);
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
            border: none;
        }

    .form-label {
        font-weight: 600;
        color: #f0f0f0;
    }

    .btn-premium {
        background: linear-gradient(135deg, #ff9d00, #ff3c00);
        color: white;
        border-radius: 12px;
        padding: 12px 20px;
        font-weight: bold;
        transition: 0.3s;
        border: none;
    }

        .btn-premium:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(255, 61, 0, 0.5);
        }

    .image-box {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 15px;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

        .image-box img {
            border-radius: 12px;
            max-width: 150px;
            height: auto;
        }

    ::placeholder {
        color: rgba(255, 255, 255, 0.7);
    }
</style>

<div class=" d-flex justify-content-center align-items-center">
    <div class="glass-card col-md-6">
        <h2 class="text-center mb-4 text-uppercase fw-bold">Update Book</h2>

        <form asp-controller="Book" asp-action="Update" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            <input type="hidden" asp-for="Book.Id" />
            <div class="mb-3">
                <label class="form-label">Book Name</label>
                <input asp-for="Book.Name" class="form-control" required placeholder="Enter book name" />
            </div>

            <div class="mb-3">
                <label class="form-label">Author</label>
                <input asp-for="Book.Author" class="form-control" required placeholder="Enter author name" />
            </div>

            <div class="mb-3">
                <label class="form-label">Genre</label>
                <input asp-for="Book.Genre" class="form-control" required placeholder="Enter book genre" />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Page Count</label>
                    <input asp-for="Book.Pages" type="number" class="form-control" required placeholder="200" />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Read Count</label>
                    <input asp-for="Book.ReadCount" type="number" class="form-control" required placeholder="1000" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Book.Decription" class="form-label">Description</label>
                <textarea asp-for="Book.Decription" class="form-control" rows="3" placeholder="Short description about the book"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="Book.ImagePath" class="form-label">Upload New Image</label>
                <input asp-for="Book.ImagePath" class="form-control" />
            </div>

            <div class="mb-4">
                <label asp-for="Book.Price" class="form-label">Price</label>
                <input asp-for="Book.Price" type="number" class="form-control" required placeholder="$100" />
            </div>

            <button type="submit" class="btn btn-premium w-100">
                <i class="fas fa-save"></i> Update
            </button>
        </form>
    </div>
</div>
