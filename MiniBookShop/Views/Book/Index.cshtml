@model IEnumerable<MiniBookShop.Domain.Entities.Book>

@{
    ViewData["Title"] = "Book";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            color: white;
            font-family: 'Poppins', sans-serif;
        }

        .container {
            padding-top: 30px;
        }

        .book-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            padding: 20px;
        }

        .card {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 570px;
            border-radius: 15px;
            overflow: hidden;
            position: relative;
            box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.3);
            background: #1c1c1c;
            transition: transform 0.3s ease-in-out;
        }

        .card-img-top {
            max-width: 100%;
            height: auto; 
            object-fit: contain; 
            background-color: transparent;
        }

            .card:hover {
                transform: translateY(-8px);
            }

        .card-content {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0);
            backdrop-filter: blur(0px);
            color: white;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            opacity: 0;
            transition: all 0.4s ease-in-out;
        }

        .card:hover .card-content {
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(12px);
            opacity: 1;
        }

        .card-content h5 {
            color: #ffcc66;
            font-size: 22px;
            font-weight: bold;
        }

        .card-content p {
            color: #ffffff;
            font-weight: bold;
            margin: 5px 0;
        }

        .description {
            font-size: 14px;
            transform: translateY(15px);
            transition: all 0.4s ease-in-out;
            opacity: 0;
        }

        .card:hover .description {
            transform: translateY(0);
            opacity: 1;
        }

        .card-btn, .up-btn {
            text-decoration:none;
            border: none;
            padding: 10px 18px;
            border-radius: 8px;
            font-weight: bold;
            background: green;
            color: white;
            transition: all 0.3s ease-in-out;
            margin-top: 10px;
        }

            .card-btn:hover, .up-btn:hover {
                background: yellowgreen;
                transform: scale(1.05);
            }

        h2 {
            text-align: center;
            font-size: 28px;
            font-weight: 600;
            color: #ffcc66;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    
    <div class="container">
        <h2>Book List</h2>

        <div class="book-grid">
            @foreach (var book in Model)
            {
                <div class="card">
                    <img src="@book.ImagePath" class="card-img-top" alt="No Image">
                    <div class="card-content">
                        <h5>@book.Name</h5>
                        <p><strong>Author:</strong> @book.Author</p>
                        <p><strong>Genre:</strong> @book.Genre</p>
                        <p><strong>Pages:</strong> @book.Pages</p>
                        <p><strong>ReadCount:</strong> @book.ReadCount</p>
                        <p style="color: #ffcc66"><strong>Price:</strong>@book.Price$</p>
                        <p class="description">@book.Decription</p>
                        <a asp-action="AddToCart" asp-route-id="@book.Id" asp-controller="Cart" class="card-btn">Add To Cart</a>
                        <a asp-action="Update" asp-route-id="@book.Id" asp-controller="Book" class="btn up-btn">Update</a>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>